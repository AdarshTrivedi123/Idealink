{
  "version": 2,
  "builds": [
    {
      "src": "blog/wsgi.py",
      "use": "@ardnt/vercel-python-wsgi",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/static/(.*)",
      "dest": "staticfiles/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "blog/wsgi.py"
    }
  ]
}
